<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui items">
        <div class="item">
            <div class="image">
                <img class="ui medium rounded image" src="<%= blog.image%>">
            </div>
            <div class="content">
                <div class="header">
                    <%= blog.title %>
                </div>
                <div class="description">
                    <%= blog.body %>
                </div>
            </div>
            <div>
                <form action="/blogs/<%=blog._id%>/edit">
                <button class="ui orange basic button" href="">Edit Post</button>
                </form>
                <form action="/blogs/<%=blog._id%>/?_method=DELETE" method="POST">
                    <button class="ui negative basic button" href="">Delete Post</button>
                </form>
            </div>
            
        </div>
    </div>
</div>


<% include ./partials/footer %>
