<% include ./partials/header %>

<div class="ui container">
    <h1>INDEX PAGE</h1>
    <% if(Object.keys(blogs).length === 0){ %>
        <p>Sorry, no blogs available!</p>
    <% } else{ %>
        <% blogs.forEach(function(blog){ %>
            <div class="ui item">
                <div class="image">
                    <p><img src="<%= blog.image %>"></p>         
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title %></a>
                    <div class="meta">
                        <span><%= blog.created %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0, 75) %></p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic purple button" href="/blogs/<%=blog._id%>">
                            Read More
                            <i class="right chevron"></i>
                        </a>
                    </div>
                </div>
                
                
                <p><a href="/blogs/<%= blog._id%>">More Info!</a></p>
                <p><a href="/blogs/<%= blog._id%>/edit">Edit this post</a></p>
            </div>
        <% }) %>
    <% } %>
</div>

<% include ./partials/footer %>